generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  name           String?
  guildId        String  @unique
  prefix         String  @default("/")
  // items
  weiId          String?
  sieraId        String?
  mokamokaId     String?
  rapportId      String?
  // channels
  readChannelId  String  @default("")
  writeChannelId String  @default("")
  // flags
  setupFlags     Int     @default(0) @db.SmallInt
  // setupRoles      Boolean @default(false)
  // setupChannel    Boolean @default(false)
  // setupAssignment Boolean @default(false)
}
