{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": "error",
        // "indent": [
        //     "error",
        //     "tab",
        //     {"SwitchCase": 1}
        // ],
        // "linebreak-style": [
        //     "error",
        //     "windows"
        // ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-empty-function": "off",
        "@typescript-eslint/no-empty-function": ["warn"],
        "max-len": [1, 120, 4]
    },
    "ignorePatterns": [
        "**/node_modules/**",
        "**/backup/**"
    ]
}